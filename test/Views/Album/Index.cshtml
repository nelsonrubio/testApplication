@model IEnumerable<test.album>

@{
    ViewBag.Title = "getAlbum";
}
<link rel="stylesheet" type="text/css" href="~/Content/album/album.css" />

<h2 class="text-center">Albunes</h2>

<div id="formulario">
    @Html.ActionLink("Crear album", "crearAlbum", new { id = ViewBag.idArtista }, new { @class = "button" })
    @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "button" })<br /><br />
    <table class="table">
        <tr>
            <th>
                Album
            </th>
            <th>
                Genero
            </th>
            <th>
                Fecha
            </th>
            <th>
                Artista
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.artista.nameArtista)
                </td>
                <td>
                    @Html.ActionLink("Editar", "editarAlbum", new { id = item.idArtista }, new { @class = "button" })
                    @Html.ActionLink("Eliminar", "eliminarAlbum", new { id = item.idArtista }, new { @class = "button" })
                </td>
            </tr>
        }

    </table>
</div>
